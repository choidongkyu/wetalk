<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_TextView"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="기기 전화번호를 입력해주세요."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/description2_TextView"
        android:layout_width="357dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="전화번호가 입력되었으면 아래의 다음 아이콘을 탭해주세요."
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/description_TextView"
        app:layout_constraintTop_toBottomOf="@+id/description_TextView" />

    <TextView
        android:id="@+id/republic_korea_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="대한민국 (Republic of Korea)"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/description_TextView"
        app:layout_constraintTop_toBottomOf="@+id/description2_TextView" />

    <EditText
        android:id="@+id/inputEt"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/republic_korea_TextView"
        app:layout_constraintStart_toStartOf="@id/republic_korea_TextView"/>

    <ImageView
        android:id="@+id/next_imageView"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/ic_baseline_play_circle_24"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>